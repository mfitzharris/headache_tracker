<div id="content-wrapper">
  <h1 class="page-header">Login</h1>
  <%= form_tag sessions_path do %>
    <div class="form">
      <div class="form-field">
        <%= label_tag :email %><br>
        <%= email_field_tag :email %>
      </div>
      <div class="form-field">
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </div>
      <div class="submit">
        <%= submit_tag "login", class: "form-button" %>
      </div>
    </div>
  <% end %>
</div>